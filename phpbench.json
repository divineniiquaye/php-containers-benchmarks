{
    "path": "benchmarks",
    "bootstrap": "vendor/autoload.php",
    "outputs": {
        "container_html": {
            "title": "PHP Dependency Injection Container Benchmarks",
            "extends": "html"
        }
    },
    "retry_threshold": 5,
    "reports": {
        "container": {
            "title": "Time",
            "generator": "table",
            "compare": "subject",
            "compare_fields": [ "mode" ],
            "break": ["revs", "its"],
            "cols": ["benchmark"]
        },
        "memory": {
            "title": "Memory",
            "generator": "table",
            "compare": "subject",
            "compare_fields": [ "mem_peak" ],
            "break": ["revs", "its"],
            "cols": ["benchmark"]
        },
        "environment": {
            "title": "Environment",
            "extends": "env"
        },
        "detail": {
            "title": "Detail by subject",
            "description": "Sorted by mode",
            "extends": "aggregate",
            "break": [ "subject", "its", "revs" ],
            "cols": ["benchmark", "mem_peak", "best", "mean", "mode", "worst", "stdev", "rstdev", "diff" ],
            "sort": { "mode": "asc" }
        },
        "all": {
            "generator": "composite",
            "reports": ["environment", "container", "memory", "detail"]
        }
    }
}
